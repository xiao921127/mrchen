<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_actionbar_bg"
    android:id="@+id/rootview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80px"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"/>
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_record"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.tencent.rtmp.ui.TXCloudVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="1450px"
                android:layout_marginRight="25px"
                android:layout_marginLeft="25px"
                android:background="@drawable/backgroud_sex"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="80px">
                <ImageView
                    android:layout_width="500px"
                    android:layout_height="150px"
                    android:src="@mipmap/ic_start_game_normal"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:src="@mipmap/ic_msg"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="50px"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="14dp"/>
                <RelativeLayout
                    android:layout_width="250px"
                    android:layout_height="170px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的娃娃币"
                        android:textSize="30px"
                        android:textColor="#FFFFFF"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20px"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_my_coins"
                        android:layout_marginTop="70px"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="58px"
                        android:layout_height="66px"
                        android:src="@mipmap/ic_coins"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60px"
                        android:text="19/每次"
                        android:textSize="30px"
                        android:textColor="#010101"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1800px"
                android:layout_marginTop="60px">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgroud_sex"
                    android:layout_marginLeft="25px"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="45px">

                </RelativeLayout>
                <ImageView
                    android:layout_width="424px"
                    android:layout_height="107px"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_last_record"
                    android:scaleType="fitXY"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10px"
                android:background="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
