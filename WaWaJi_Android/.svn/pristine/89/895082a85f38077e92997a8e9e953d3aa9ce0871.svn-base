<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/shape_dialog_normal"
    android:orientation="vertical">

    <TextView
        style="@style/Black_Front16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="@string/calculation_result" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dialog_verify_code"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_image" />

        <EditText
            android:id="@+id/et_dialog_verify_code"
            style="@style/Gray_Front14"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_verify_normal"
            android:gravity="start|center_vertical"
            android:hint="@string/verify_code"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_dialog_verify_code"
        style="@style/White_Front16"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/empty"
        android:text="@string/sure" />

</LinearLayout>