<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wawaji.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.Camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <!-- 开屏页面 -->
        <activity
            android:name=".ui.SplashAct"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 首页 -->
        <activity
            android:name=".ui.HomeAct"
            android:screenOrientation="portrait" />

        <!-- 游戏页面 -->
        <activity
            android:name=".ui.PlayAct"
            android:screenOrientation="portrait" />

        <!-- 我的页面 -->
        <activity
            android:name=".ui.MyAct"
            android:screenOrientation="portrait" />

        <!-- 设置页面 -->
        <activity
            android:name=".ui.SettingsAct"
            android:screenOrientation="portrait" />

        <!-- 充值页面 -->
        <activity
            android:name=".ui.RechargeAct"
            android:screenOrientation="portrait" />

        <!-- 登录页面 -->
        <activity
            android:name=".ui.LoginAct"
            android:screenOrientation="portrait" />

        <!-- 验证码页面 -->
        <activity
            android:name=".ui.VerifyAct"
            android:screenOrientation="portrait" />
        <!--娃娃详情页-->
        <activity
            android:name=".ui.PlayDetailsAct"
            android:screenOrientation="portrait" />
        <!--收货信息页-->
        <activity
            android:name=".ui.ReceiptInfoAct"
            android:screenOrientation="portrait" />
        <!--充值页-->
        <activity
            android:name=".ui.RechargeActivity"
            android:screenOrientation="portrait" />









        <!-- 网页页面 -->
        <activity
            android:name=".ui.WebAct"
            android:screenOrientation="portrait" />

        <!-- 添加友盟appkey -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL_VALUE}" />

    </application>

</manifest>