<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_dolls_item_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_default_img" />

        <TextView
            android:id="@+id/tv_dolls_item_name"
            style="@style/Black_Front16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="娃娃名字" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_coins"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_coins"/>

            <TextView
                android:id="@+id/tv_dolls_item_price"
                style="@style/Black_Front14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/expense" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_dolls_item_status"
            style="@style/White_Front14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_empty_bg"
            android:text="空闲中" />
    </LinearLayout>
</FrameLayout>