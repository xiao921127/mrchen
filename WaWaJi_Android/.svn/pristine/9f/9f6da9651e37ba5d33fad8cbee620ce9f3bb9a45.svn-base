<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wawaji.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.Camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="com.wawaji.app.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <!-- 开屏页面 -->
        <activity
            android:name="com.wawaji.app.ui.SplashAct"
            android:launchMode="standard"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 首页 -->
        <activity
            android:name="com.wawaji.app.ui.HomeAct"
            android:screenOrientation="portrait" />

        <!-- 游戏页面 -->
        <activity
            android:name="com.wawaji.app.ui.PlayAct"
            android:screenOrientation="portrait" />

        <!-- 我的页面 -->
        <activity
            android:name="com.wawaji.app.ui.MyAct"
            android:screenOrientation="portrait" />

        <!-- 设置页面 -->
        <activity
            android:name="com.wawaji.app.ui.SettingsAct"
            android:screenOrientation="portrait" />

        <!-- 充值页面 -->
        <activity
            android:name="com.wawaji.app.ui.RechargeAct"
            android:screenOrientation="portrait" />

        <!-- 登录页面 -->
        <activity
            android:name="com.wawaji.app.ui.LoginAct"
            android:screenOrientation="portrait" />

        <!-- 验证码页面 -->
        <activity
            android:name="com.wawaji.app.ui.VerifyAct"
            android:screenOrientation="portrait" />

        <service android:name="com.liulishuo.filedownloader.services.FileDownloadService$SharedMainProcessService" />
        <service
            android:name="com.liulishuo.filedownloader.services.FileDownloadService$SeparateProcessService"
            android:process=":filedownloader" />
    </application>

</manifest>